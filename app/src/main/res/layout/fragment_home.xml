<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray_background_color"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Доступные методики"
            android:textSize="22sp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ProfMethodicButton"
            android:backgroundTint="@color/main_gray_background_color"
            app:cornerRadius="8dp"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            app:strokeColor="@color/main_blue_text_color"
            app:strokeWidth="1dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Профориентация"
            android:textColor="@color/main_blue_text_color" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/MotivationMethodicButton"
            android:backgroundTint="@color/main_gray_background_color"
            app:cornerRadius="8dp"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            app:strokeColor="@color/main_blue_text_color"
            app:strokeWidth="1dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Мотивация"
            android:textColor="@color/main_blue_text_color" />
    </LinearLayout>
</FrameLayout>
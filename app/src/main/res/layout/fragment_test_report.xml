<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_gray_background_color"
    tools:context=".View.Test.TestReportFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/main_gray_background_color"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/main_black_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="@string/TestResultSrting" />

            <TextView
                android:layout_marginTop="24dp"
                android:id="@+id/TestResultText"
                android:textColor="@color/main_black_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:text="Обьяснение результата" />

            <TextView
                android:id="@+id/TipTextView"
                android:layout_marginTop="16dp"
                android:textColor="@color/main_gray_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16sp"

                android:text="Вспомогательный текст" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/BackTestButton"
            android:backgroundTint="@color/white"
            app:cornerRadius="8dp"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            app:strokeColor="@color/main_blue_text_color"
            app:strokeWidth="1dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/BackString"
            android:textColor="@color/main_blue_text_color" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp"/>
    </LinearLayout>
</ScrollView>